{
  "name": "@film-scheduler/film-source-golden-horse",
  "version": "1.0.0",
  "description": "Golden Horse Film Festival data scraper",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "types": "./dist/main.d.ts"
    },
    "./data": {
      "import": "./dist/data/index.js",
      "types": "./dist/data/index.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "film_details_cache.json",
    "film_list_cache.json",
    "film_sections_map.json",
    "sections_cache.json"
  ],
  "scripts": {
    "start": "node dist/main.js",
    "dev": "tsx watch src/main.ts",
    "build": "tsc"
  },
  "dependencies": {
    "jsdom": "^22.1.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.10.0",
    "tsx": "^4.7.1",
    "typescript": "^5.3.2"
  }
}